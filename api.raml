/me:
  get:
    description: ver datos del suario logeado
    headers: 
      Authorization: <token>
    responses: 
      200:
        body: 
          application/json:
            example:     
              {
                "id":"1",
                "email":"email@email.com",
                "name":"John", 
                "pass":"$2y$10$wdw1T3.Pk1GDs6l81roTd.BKEULpVgMsZZlD1N6gOxu2uZBklekbC"
              }
  put:
    description: modificar datos del usuario logeado (pass y name)
    headers: 
      Authorization: <token> 
    body:
      application/json:
        example: 
          {"name": "Juan", "pass": "qwerty"}
    responses: 
      200:
        body: 
          application/json:
            example:     
              {
                "id":"1",
                "email":"email@email.com",
                "name":"Juan", 
                "pass":"$2y$10$wdw1T3.Pk1GDs6l81roTd.BKEULpVgMsZZlD1N6gOxu2uZBklekbC"
              }
  delete:
    description: eliminar el usuario logeado
    headers: 
      Authorization: <token> 
    responses: 
      200:
        body: 
          application/json:
            example:     
              {
                "id":"1",
                "email":"email@email.com",
                "name":"Juan", 
                "pass":"$2y$10$wdw1T3.Pk1GDs6l81roTd.BKEULpVgMsZZlD1N6gOxu2uZBklekbC"
