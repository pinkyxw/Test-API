#%RAML 1.0
title: Test API
version: v1
baseUri: https://127.0.0.1:8000/api
mediaType: application/json

/new:
  post:
    description: crear nuevo usuario
    body:
      application/json:
        example: 
          {"email": "email@email.com", "pass": "123456", "name": "John"}
    responses: 
      200:
        body: 
          application/json:
            example:     
              {
                "access_token": <token>,
                "token_type": "bearer",
                "expires_in": 3600
              }
      
